{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "ES2022"
    ],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}